<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="ProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">2dp</item>
        <item name="spb_stroke_width">6dp</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_speed">2</item>
        <item name="android:interpolator">@anim/interpolator</item>
        <item name="spb_colors">@array/progress_bar_colors</item>
        <item name="spb_progressiveStart_activated">true</item>
        <item name="spb_generate_background_with_colors">false</item>
    </style>
</resources>
